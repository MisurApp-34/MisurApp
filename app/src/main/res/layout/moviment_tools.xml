<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:weightSum="10">
    <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <TextView
            android:text="@string/movimenttools"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"

            android:textColor="@android:color/white"
            android:layout_centerInParent="true"

            />

    </RelativeLayout>

    <GridLayout
        android:layout_weight="7"
        android:columnCount="2"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:padding="16dp"


        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- ROw 1 -->
        <!-- colonna 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:foreground="?android:attr/selectableItemBackground"

            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/card_gravity"

            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="50dp"
                    android:layout_gravity="center"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/gravity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/gravity"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"                        android:textColor="@android:color/black"

                    android:textStyle="normal"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- colonna 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:foreground="?android:attr/selectableItemBackground"

            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/card_acceleration"

            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="50dp"
                    android:layout_gravity="center"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/accelerometer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/acceleration"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"                        android:textColor="@android:color/black"

                    android:textStyle="normal"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- ROw 2 -->
        <!-- colonna 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:foreground="?android:attr/selectableItemBackground"

            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/card_speed"

            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="50dp"
                    android:layout_gravity="center"
                    android:maxHeight="50dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/speedometer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/speed"
                    android:textAlignment="center"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"                        android:textColor="@android:color/black"

                    android:textStyle="normal"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!-- ROw 3 -->
        <!-- colonna 1 -->
        <androidx.cardview.widget.CardView

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            >


        </androidx.cardview.widget.CardView>

        <!-- colonna 2 -->
        <androidx.cardview.widget.CardView

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:visibility="invisible"
            >


        </androidx.cardview.widget.CardView>


    </GridLayout>
</LinearLayout>