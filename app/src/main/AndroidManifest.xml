<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.uniba.di.misurapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name=".CompassTool" android:screenOrientation="portrait" />
        <activity android:name=".PressureTool" android:screenOrientation="portrait"/>
        <activity android:name=".MagneticField" android:screenOrientation="portrait"/>
        <activity android:name=".PositionTools" android:screenOrientation="portrait"/>
        <activity android:name=".ProximityTool" android:screenOrientation="portrait"/>
        <activity android:name=".SoundIntensity" android:screenOrientation="portrait"/>
        <activity android:name=".TemperatureTool" android:screenOrientation="portrait"/>
        <activity android:name=".Settings" android:screenOrientation="portrait"/>
        <activity android:name=".Speed" android:screenOrientation="portrait"/>
        <activity android:name=".Altimeter" android:screenOrientation="portrait"/>
        <activity android:name=".MapActivity" android:screenOrientation="portrait"/>
        <activity android:name=".Favorite" android:screenOrientation="portrait"/>
        <activity android:name=".AmbientalTools" android:screenOrientation="portrait"/>
        <activity android:name=".MovimentTools" android:screenOrientation="portrait"/>
        <activity android:name=".AccelerometerTool" android:screenOrientation="portrait"/>
        <activity android:name=".LightTool" android:screenOrientation="portrait"/>
        <activity android:name=".GravityTool" android:screenOrientation="portrait"/>
        <activity android:name=".ToolSave" android:screenOrientation="portrait"/>
        <activity android:name=".SpiritLevel" android:screenOrientation="portrait"/>
        <activity android:name=".AboutUs" android:screenOrientation="portrait"/>

        <service android:name=".LocationService"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>
</manifest>